@model List<CasgemApiConsurmer.Dto.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>